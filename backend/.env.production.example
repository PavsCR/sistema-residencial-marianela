# ============================================
# CONFIGURACIÓN DEL SERVIDOR - PRODUCCIÓN
# ============================================
PORT=3001
NODE_ENV=production

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DATABASE_URL="postgres://usuario:password@host:puerto/database?sslmode=require"

# ============================================
# CONFIGURACIÓN JWT (Autenticación)
# ============================================
# IMPORTANTE: Cambia este secret por uno aleatorio y seguro
JWT_SECRET=tu_secret_jwt_super_seguro_aqui_cambialo
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=15

# ============================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-app
EMAIL_FROM=Sistema Residencial Marianela <tu-email@gmail.com>

# ============================================
# OTRAS CONFIGURACIONES
# ============================================
# URL del frontend en producción (la URL de Vercel)
FRONTEND_URL=https://tu-app.vercel.app
PASSWORD_RESET_EXPIRES=60
